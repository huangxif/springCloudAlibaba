<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.easy.qq.mapper.QqFriendSessionMapper">

    <resultMap type="com.easy.qq.entity.QqFriendSession" id="QqFriendSessionMap">
        <result property="sid" column="SID" jdbcType="INTEGER"/>
        <result property="userId" column="USER_ID" jdbcType="INTEGER"/>
        <result property="friendUserId" column="FRIEND_USER_ID" jdbcType="INTEGER"/>
        <result property="sessionType" column="SESSION_TYPE" jdbcType="INTEGER"/>
        <result property="sessionStatus" column="SESSION_STATUS" jdbcType="INTEGER"/>
        <result property="createTime" column="CREATE_TIME" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="UPDATE_TIME" jdbcType="TIMESTAMP"/>
    </resultMap>

    <select id="getSessionList" resultType="com.easy.qq.web.user.vo.QqFriendSessionVo">
        select *
        from qq_friend_session
        where USER_ID = #{userId}
        order by SID desc
    </select>

</mapper>

